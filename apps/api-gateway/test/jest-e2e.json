{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@app/common/(.*)$": "<rootDir>/../../../libs/common/src/$1",
    "^@app/common$": "<rootDir>/../../../libs/common/src",
    "^@app/database/(.*)$": "<rootDir>/../../../libs/database/src/$1",
    "^@app/database$": "<rootDir>/../../../libs/database/src",
    "^@app/redis/(.*)$": "<rootDir>/../../../libs/redis/src/$1",
    "^@app/redis$": "<rootDir>/../../../libs/redis/src",
    "^@app/kafka/(.*)$": "<rootDir>/../../../libs/kafka/src/$1",
    "^@app/kafka$": "<rootDir>/../../../libs/kafka/src",
    "^@app/grpc/(.*)$": "<rootDir>/../../../libs/grpc/src/$1",
    "^@app/grpc$": "<rootDir>/../../../libs/grpc/src",
    "^@app/auth-db/(.*)$": "<rootDir>/../../../libs/auth-db/src/$1",
    "^@app/auth-db$": "<rootDir>/../../../libs/auth-db/src",
    "^@app/video-db/(.*)$": "<rootDir>/../../../libs/video-db/src/$1",
    "^@app/video-db$": "<rootDir>/../../../libs/video-db/src",
    "^@app/interaction-db/(.*)$": "<rootDir>/../../../libs/interaction-db/src/$1",
    "^@app/interaction-db$": "<rootDir>/../../../libs/interaction-db/src",
    "^@app/notification-db/(.*)$": "<rootDir>/../../../libs/notification-db/src/$1",
    "^@app/notification-db$": "<rootDir>/../../../libs/notification-db/src"
  }
}
