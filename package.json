{
  "name": "tiktok-clone-monorepo",
  "version": "1.0.0",
  "description": "TikTok Clone - Microservices Architecture with NestJS",
  "author": "Senior Developer",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/api-gateway/main",
    "start:gateway": "nest start api-gateway --watch",
    "start:gateway:debug": "nest start api-gateway --debug=9233 --watch",
    "start:auth": "nest start auth-service --watch",
    "start:auth:debug": "nest start auth-service --debug=9229 --watch",
    "start:video": "nest start video-service --watch",
    "start:video:debug": "nest start video-service --debug=9230 --watch",
    "start:interaction": "nest start interaction-service --watch",
    "start:interaction:debug": "nest start interaction-service --debug=9231 --watch",
    "start:notification": "nest start notification-service --watch",
    "start:notification:debug": "nest start notification-service --debug=9232 --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/api-gateway/test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:generate": "npm run typeorm -- migration:generate -d libs/database/src/data-source.ts",
    "migration:create": "npm run typeorm -- migration:create",
    "migration:run": "ts-node -r tsconfig-paths/register libs/database/src/scripts/run-migrations.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d libs/database/src/data-source.ts",
    "seed:run": "ts-node -r tsconfig-paths/register libs/database/src/scripts/run-seed.ts",
    "db:clear": "ts-node -r tsconfig-paths/register libs/database/src/scripts/clear-database.ts",
    "db:reset": "npm run db:clear && npm run migration:run && npm run seed:run",
    "db:setup": "npm run migration:run && npm run seed:run",
    "version:check": "ts-node -r tsconfig-paths/register libs/database/src/scripts/check-version.ts",
    "version:deploy": "ts-node -r tsconfig-paths/register libs/database/src/scripts/deploy-version.ts",
    "version:history": "ts-node -r tsconfig-paths/register libs/database/src/scripts/version-history.ts",
    "migration:auth:generate": "npm run typeorm -- migration:generate -d libs/auth-db/src/migrations/data-source.ts",
    "migration:auth:run": "npm run typeorm -- migration:run -d libs/auth-db/src/migrations/data-source.ts",
    "migration:video:generate": "npm run typeorm -- migration:generate -d libs/video-db/src/migrations/data-source.ts",
    "migration:video:run": "npm run typeorm -- migration:run -d libs/video-db/src/migrations/data-source.ts",
    "migration:interaction:generate": "npm run typeorm -- migration:generate -d libs/interaction-db/src/migrations/data-source.ts",
    "migration:interaction:run": "npm run typeorm -- migration:run -d libs/interaction-db/src/migrations/data-source.ts",
    "migration:notification:generate": "npm run typeorm -- migration:generate -d libs/notification-db/src/migrations/data-source.ts",
    "migration:notification:run": "npm run typeorm -- migration:run -d libs/notification-db/src/migrations/data-source.ts",
    "migration:all:run": "npm run migration:auth:run && npm run migration:video:run && npm run migration:interaction:run && npm run migration:notification:run"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.12.0",
    "@grpc/grpc-js": "^1.9.14",
    "@grpc/proto-loader": "^0.7.10",
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/microservices": "^10.3.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/platform-socket.io": "^10.3.0",
    "@nestjs/swagger": "^7.1.17",
    "@nestjs/typeorm": "^10.0.1",
    "@nestjs/websockets": "^10.3.0",
    "@sentry/integrations": "^7.99.0",
    "@sentry/node": "^7.99.0",
    "axios": "^1.6.5",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "helmet": "^7.1.0",
    "image-js": "^1.2.0",
    "ioredis": "^5.3.2",
    "kafkajs": "^2.2.4",
    "multer": "^1.4.5-lts.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.11.3",
    "pino": "^8.18.0",
    "pino-http": "^8.6.1",
    "prom-client": "^15.1.0",
    "redis": "^4.6.12",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "socket.io": "^4.6.1",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "winston-elasticsearch": "^0.17.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "^10.3.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.6",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.6",
    "@types/passport-jwt": "^4.0.0",
    "@types/passport-local": "^1.0.38",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-unused-imports": "^4.3.0",
    "jest": "^29.7.0",
    "prettier": "^3.7.4",
    "rimraf": "^5.0.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/common(|/.*)$": "<rootDir>/libs/common/src/$1",
      "^@app/database(|/.*)$": "<rootDir>/libs/database/src/$1",
      "^@app/redis(|/.*)$": "<rootDir>/libs/redis/src/$1",
      "^@app/kafka(|/.*)$": "<rootDir>/libs/kafka/src/$1",
      "^@app/grpc(|/.*)$": "<rootDir>/libs/grpc/src/$1"
    }
  }
}
