# Application
NODE_ENV=development
PORT=5555

# Database PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=tiktok_clone

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=tiktok-service
KAFKA_GROUP_ID=tiktok-group

# JWT
JWT_ACCESS_SECRET=your-access-token-secret-key-change-this-in-production
JWT_REFRESH_SECRET=your-refresh-token-secret-key-change-this-in-production
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# gRPC Services
GRPC_AUTH_URL=localhost:50051
GRPC_VIDEO_URL=localhost:50052
GRPC_INTERACTION_URL=localhost:50053
GRPC_NOTIFICATION_URL=localhost:50054

# HTTP Services URLs
AUTH_SERVICE_URL=http://localhost:4001
VIDEO_SERVICE_URL=http://localhost:4002
INTERACTION_SERVICE_URL=http://localhost:4003
NOTIFICATION_SERVICE_URL=http://localhost:4004

# Auth Service Database
AUTH_DB_HOST=localhost
AUTH_DB_PORT=5432
AUTH_DB_USERNAME=postgres
AUTH_DB_PASSWORD=postgres
AUTH_DB_NAME=tiktok_auth
AUTH_DB_SYNC=true

# Video Service Database
VIDEO_DB_HOST=localhost
VIDEO_DB_PORT=5432
VIDEO_DB_USERNAME=postgres
VIDEO_DB_PASSWORD=postgres
VIDEO_DB_NAME=tiktok_video
VIDEO_DB_SYNC=true

# Interaction Service Database
INTERACTION_DB_HOST=localhost
INTERACTION_DB_PORT=5432
INTERACTION_DB_USERNAME=postgres
INTERACTION_DB_PASSWORD=postgres
INTERACTION_DB_NAME=tiktok_interaction
INTERACTION_DB_SYNC=true

# Notification Service Database
NOTIFICATION_DB_HOST=localhost
NOTIFICATION_DB_PORT=5432
NOTIFICATION_DB_USERNAME=postgres
NOTIFICATION_DB_PASSWORD=postgres
NOTIFICATION_DB_NAME=tiktok_notification
NOTIFICATION_DB_SYNC=true

# Service HTTP Ports
AUTH_HTTP_PORT=4001
VIDEO_HTTP_PORT=4002
INTERACTION_HTTP_PORT=4003
NOTIFICATION_HTTP_PORT=4004

# Service gRPC Ports
AUTH_GRPC_PORT=50051
VIDEO_GRPC_PORT=50052
INTERACTION_GRPC_PORT=50053
NOTIFICATION_GRPC_PORT=50054

# File Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES=video/mp4,video/webm,video/ogg

# Sentry
SENTRY_DSN=

# Prometheus
PROMETHEUS_PORT=9090

# CORS
CORS_ORIGIN=http://localhost:5555,http://localhost:3001

# Cookie Settings
COOKIE_SECURE=false
COOKIE_SAME_SITE=strict
COOKIE_DOMAIN=localhost
